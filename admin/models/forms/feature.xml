<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field 
			name="id" 
			type="number" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC" 
			class="readonly" 
			size="10" 
			default="0"
			readonly="true" 
		/>
		
		<field 
			name="title" 
			type="text" 
			label="JGLOBAL_TITLE"
			description="JFIELD_TITLE_DESC"
			class="input-xxlarge input-large-text"
			size="40"
			required="true" 
		/>
		
		<field 
			name="type" 
			type="list" 
			label="COM_JVOTER_FIELD_TYPE_LABEL"
			description="COM_JVOTER_FIELD_TYPE_DESC" 			
			size="1" 
			default="text"
			required="true" 
			>
			<option value="boolean">COM_JVOTER_FEATURE_FILTER_TYPE_OPT_BOOLEAN</option>
			<option value="integer">COM_JVOTER_FEATURE_FILTER_TYPE_OPT_INTEGER</option>
			<option value="text">COM_JVOTER_FEATURE_FILTER_TYPE_OPT_TEXT</option>
		</field>		
		
		<field
			name="label"
			type="text"
			label="COM_JVOTER_FIELD_LABEL_LABEL"
			description="COM_JVOTER_FIELD_LABEL_DESC"
			size="40"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>
		
		<field
			name="namekey"
			type="text"
			label="JFIELD_NAME_LABEL"
			description="JFIELD_NAME_DESC"
			hint="JFIELD_NAME_PLACEHOLDER"
			size="45"
		/>
		
		<field
			name="value"
			type="textarea"
			label="COM_JVOTER_FIELD_DEFAULT_VALUE_LABEL"
			description="COM_JVOTER_FIELD_DEFAULT_VALUE_DESC"
			filter="raw"
		/>

		<field 
			name="state" 
			type="list" 
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" 
			class="chzn-color-state"
			filter="intval" 
			size="1" 
			default="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

		<field
			name="buttonspacer"
			type="spacer" 
			description="JGLOBAL_ACTION_PERMISSIONS_DESCRIPTION"
		/>

		<field 
			name="created" 
			type="calendar" 
			label="COM_JVOTER_FIELD_CREATED_LABEL"
			description="COM_JVOTER_FIELD_CREATED_DESC"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc" 
		/>

		<field 
			name="created_by" 
			type="user"
			label="COM_JVOTER_FIELD_CREATED_BY_LABEL" 
			description="COM_JVOTER_FIELD_CREATED_BY_DESC" 
		/>

		<field 
			name="modified" 
			type="calendar" 
			label="JGLOBAL_FIELD_MODIFIED_LABEL" 
			description="COM_JVOTER_FIELD_MODIFIED_DESC"
			class="readonly"
			translateformat="true"
			showtime="true"
			size="22"
			readonly="true"
			filter="user_utc" 
		/>

		<field 
			name="modified_by" 
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
		/>

		<field 
			name="checked_out" 
			type="hidden" 
			filter="unset" 
		/>

		<field 
			name="checked_out_time" 
			type="hidden" 
			filter="unset" 
		/>
		
		<field 
			name="ordering" 
			type="text" 
			label="JFIELD_ORDERING_LABEL"
			description="JFIELD_ORDERING_DESC" 
			size="6"
			default="0" 
		/>

	</fieldset>
	
</form>
