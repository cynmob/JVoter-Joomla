	<copyright>Copyright (c) 2018 Jdonate. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<creationDate>June 2018</creationDate>
	<version>v1.0.0</version>
	<description>PLG_JDPAYMENT_STRIPE_DESCRIPTION</description>
	
	<files>
		<filename plugin="stripe">stripe.php</filename>
		<folder>stripe</folder>
	</files>
	
	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.plg_jdpayment_stripe.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_jdpayment_stripe.sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="title" 
					type="text" 
					size="50" 
					default=""
					label="PLG_JDPAYMENT_STRIPE_TITLE_LABEL"
					description="PLG_JDPAYMENT_STRIPE_TITLE_DESC"
				/>
				
				<field 
					name="ppimage" 
					type="text" 
					size="50" 
					default=""
					label="PLG_JDPAYMENT_STRIPE_PPIMAGE_LABEL"
					description="PLG_JDPAYMENT_STRIPE_PPIMAGE_DESC"
				/>
				
				<field 
					type="spacer"
				/>						
				
				<field 
					name="sb_private_key" 
					type="text" 
					size="50" 
					default=""
					label="PLG_JDPAYMENT_STRIPE_SBPRIVKEY_LABEL"
					description="PLG_JDPAYMENT_STRIPE_SBPRIVKEY_DESC"
				/>
				
				<field 
					name="sb_public_key" 
					type="text" 
					size="50" 
					default=""
					label="PLG_JDPAYMENT_STRIPE_SBPUBKEY_LABEL"
					description="PLG_JDPAYMENT_STRIPE_SBPUBKEY_DESC"
				/>
				
				<field 
					type="spacer" 
				/>
							
				<field 
					name="sandbox" 
					type="radio" 
					default="0"
					label="PLG_JDPAYMENT_STRIPE_SANDBOX_LABEL"
					description="PLG_JDPAYMENT_STRIPE_SANDBOX_DESC"
					class="btn-group btn-group-yesno"
					>
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>