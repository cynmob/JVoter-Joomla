	<name>PLG_OTBPAYMENT_STRIPE</name>
    <author>ObeyTheBeagle Team</author>
    <authorEmail>support@obeythebeagle.com</authorEmail>
    <authorUrl>https://www.obeythebeagle.com</authorUrl>
